<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:gravity="center_vertical"  android:layout_width="match_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" >
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="0.5"
        android:id="@+id/l1"
        android:layout_above="@id/l1">
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="0.5"
        android:paddingLeft="30dp"
        android:paddingTop="70dp"
        android:paddingRight="30dp">
        <Button android:id="@+id/mainActivityStartCallBlockerService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:drawableBottom="@mipmap/callsmsblock1"
            android:layout_weight="0.5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="30dp"
            android:text="Block"
            android:textColor="#ffffffff"
            android:singleLine="false"
            android:maxLines="2"
            android:textSize="22dp"
            android:background="@color/AliceBlue" />
</LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="0.5"
            android:paddingLeft="30dp"
            android:paddingTop="80dp"
            android:paddingRight="30dp">
        <Button android:layout_below="@id/mainActivityStartCallBlockerService"
            android:layout_alignLeft="@id/mainActivityStartCallBlockerService"
            android:id="@+id/mainActivitySeeBlacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:drawableBottom="@mipmap/blacklistt"
            android:text="Block List"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:paddingBottom="15dp"
            android:paddingTop="30dp"
            android:background="@color/AliceBlue" />
</LinearLayout>

    </LinearLayout>

    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="0.5"
        android:id="@+id/l2"
        android:layout_below="@id/l2"
        >
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="0.5"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/mainActivityStopCallBlockerService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:drawableBottom="@mipmap/callsmsblock1"
            android:layout_weight="0.5"
            android:layout_alignTop="@+id/mainActivityStartCallBlockerService"
            android:layout_toRightOf="@+id/mainActivityStartCallBlockerService"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="false"
            android:text="Stop Blocking"
            android:textColor="#ffffff"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:background="@color/AliceBlue" />
    </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="0.5"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
        <Button
            android:id="@+id/mainActivitySeeLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:drawableBottom="@mipmap/lognew"
            android:text="My Log"
            android:textColor="#ffffff"
            android:layout_weight="0.5"
            android:layout_alignTop="@+id/mainActivitySeeBlacklist"
            android:layout_alignLeft="@+id/mainActivityStopCallBlockerService"
            android:layout_alignStart="@+id/mainActivityStopCallBlockerService"
            android:paddingTop="25dp"
            android:paddingBottom="30dp"
            android:background="@color/AliceBlue" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
