<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUser"
            android:layout_margin="10dp"
            android:text="User Name"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/txtUserVal"
            android:layout_below="@id/txtUser"
            android:background="@drawable/rectangle_editbox"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMobNo"
            android:layout_below="@id/txtUserVal"
            android:layout_margin="10dp"
            android:text="Mobile No"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/txtMobNoVal"
            android:layout_below="@id/txtMobNo"
            android:background="@drawable/rectangle_editbox"
            android:phoneNumber="true"
            android:minEms="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmail"
            android:layout_below="@id/txtMobNoVal"
            android:layout_margin="10dp"
            android:text="Email Address"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/txtEmailVal"
            android:layout_below="@id/txtEmail"
            android:background="@drawable/rectangle_editbox"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"
            android:layout_below="@id/txtEmailVal"
            android:layout_margin="10dp"
            android:text="Password"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/txtPasswordVal"
            android:layout_below="@id/txtPassword"
            android:background="@drawable/rectangle_editbox"
            android:password="true"/>
     <CheckBox
         android:id="@+id/cbShowPwd"
         android:layout_below="@id/txtPasswordVal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showpassword"
            android:layout_below="@id/txtPasswordVal"
            android:layout_toRightOf="@id/cbShowPwd"
            android:layout_margin="15dp"
            android:textSize="15dp"
            android:text="Show Password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtActivationKey"
            android:layout_below="@id/cbShowPwd"
            android:layout_margin="10dp"
            android:text="Activation Key"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/txtActivationKeyVal"
            android:layout_below="@id/txtActivationKey"
            android:background="@drawable/rectangle_editbox"
            android:password="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_submit"
            android:layout_below="@id/txtActivationKeyVal"
            android:background="#0393de"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>
</ScrollView>